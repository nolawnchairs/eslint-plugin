{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "lib": [
      "es2015",
      "esnext"
    ],
    "sourceMap": false,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "strictPropertyInitialization": false,
    "outDir": "./lib"
  },
  "include": [
    "./src/**/*",
  ]
}